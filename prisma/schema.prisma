generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameStatus {
  IDLE
  IN_PROGRESS
  GAME_OVER
  GAME_OVER_DRAW
}

model Game {
  id      String       @id @default(cuid())
  status  GameStatus   @default(IDLE)
  players GamePlayer[] @relation("players")
  field   Json?

  winner     GamePlayer? @relation(fields: [winnerId], references: [id])
  winnerId   String?     @map("winner_id")
  gameOverAt String?     @map("game_over_at")
}

model GamePlayer {
  id     String @id @default(cuid())
  gameId String @map("game_id")
  game   Game   @relation("players", fields: [gameId], references: [id])
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])
  index  Int
  games  Game[]
}

model User {
  id           String       @id @default(cuid())
  login        String
  rating       Int
  passwordHash String       @map("password_hash")
  salt         String       @default("")
  players      GamePlayer[]
}
